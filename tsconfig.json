{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["./src/**/*", "./spec/**/*"],
  "exclude": ["jest.config.js"]
}
